{
    "name": "Github Helix",
    "description": "Github Helix helper",
    "version": "2.0",
    "permissions": [
      "activeTab", "*://*.github.com/*", "https://helix.dot.net/*", "storage"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_title": "Make this page red"
    },
    "manifest_version": 2,
    "content_scripts": [
      {
        "matches": ["https://*.github.com/*"],
        "js": ["content_script.js"]
      }
    ],
    "options_ui": {
      "page": "options.html",
      "open_in_tab": false
    }
  }